<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="TitleLabel"  TargetType="{x:Type Label}">
        <Setter Property="Foreground" Value="{DynamicResource BorderColor}"/>
        <Setter Property="FontFamily" Value="Jetbrain Mono"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
    </Style>

    <Style x:Key="NameLabel"  TargetType="{x:Type Label}">
        <Setter Property="Foreground" Value="{DynamicResource color}"/>
        <Setter Property="FontFamily" Value="Jetbrain Mono"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
    </Style>

    <Style x:Key="TextBlockStyle"  TargetType="{x:Type TextBlock}">
        <Setter Property="Foreground" Value="{DynamicResource color}"/>
        <Setter Property="FontFamily" Value="Jetbrain Mono"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
    </Style>

</ResourceDictionary>