<Page x:Class="MedClinic.Desktop.Pages.Rooms.BedCreatePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MedClinic.Desktop.Pages.Rooms"
      mc:Ignorable="d" 
      Title="BedCreatePage"
      Loaded="Page_Loaded">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="100"/>
        </Grid.RowDefinitions>

        <StackPanel
            Grid.Row="0"
            Margin="0 60 0 0"
            HorizontalAlignment="Center"
            Orientation="Vertical">

            <TextBlock
                Text="Xona raqami :"
                Style="{DynamicResource TitleTextBlock}"/>

            <TextBox
                Margin="0 10 0 0"
                Name="tb_RoomNumber"
                Width="300"
                MaxLength="4"
                PreviewTextInput="tb_PreviewTextInput"
                Style="{DynamicResource Update_TextBox_Style}"/>

            <TextBlock
                Text="Joylashtirish xonasi :"
                Margin="0 40 0 0"
                Style="{DynamicResource TitleTextBlock}"/>

            <ComboBox
                FontSize="16"
                Name="cb_RoomNumber"
                Margin="0 10 0 0"
                MaxDropDownHeight="150">

                <ComboBox.ItemContainerStyle>
                    <Style TargetType="ComboBoxItem">
                        <Setter Property="Margin" Value="0 0 15 0"/>
                    </Style>
                </ComboBox.ItemContainerStyle>

                <ComboBoxItem Content="1"/>
                <ComboBoxItem Content="2"/>
                <ComboBoxItem Content="3"/>
                <ComboBoxItem Content="4"/>
                <ComboBoxItem Content="5"/>
                <ComboBoxItem Content="6"/>
                <ComboBoxItem Content="7"/>
                <ComboBoxItem Content="8"/>
                <ComboBoxItem Content="9"/>
                <ComboBoxItem Content="10"/>
                <ComboBoxItem Content="11"/>

            </ComboBox>


        </StackPanel>
        <Button
            Grid.Row="1"
            Name="Save_Button"
            Width="200"
            Content="Saqlash"
            FontSize="20"
            Click="Save_Button_Click"
            Style="{DynamicResource LoginButton}"/>
    </Grid>
</Page>
