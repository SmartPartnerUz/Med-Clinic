<Page x:Class="MedClinic.Desktop.Pages.Doctors.DoctorPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MedClinic.Desktop.Components.Loader"
      mc:Ignorable="d" 
      Title="DoctorPage"
      Loaded="Page_Loaded">

    <Grid
        Margin="10">

        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid
            HorizontalAlignment="Center"
            Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="500"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Label
                Grid.Column="0"
                Content="Qidirish"
                VerticalAlignment="Center"
                Margin="10"
                FontSize="18"
                Style="{DynamicResource TitleLabel}"/>

            <TextBox
                Margin="0 0 0 0"
                Name="searchTextBox"
                Style="{DynamicResource search}"
                KeyDown="SearchTextBox_KeyDown"
                Grid.Column="1"/>

            <Button
                x:Name="DoctorCreate_Button"
                Click="DoctorCreate_Button_Click"
                Height="35"
                Width="150"
                Margin="20 0 0 0"
                Grid.Column="2"
                Content="Qo'shish"
                FontSize="18"
                HorizontalAlignment="Center"
                Foreground="{DynamicResource color}"
                Style="{DynamicResource LoginButton}"/>

        </Grid>
        <Grid
            Grid.Row="1">

            <local:Loader
                x:Name="Loader"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"/>

            <ScrollViewer 
                x:Name="scrolViver"
                Visibility="Collapsed"
                >
            
                <WrapPanel 
                    x:Name="wrpDoctors">
                </WrapPanel>
            
            </ScrollViewer>

            <Label 
                x:Name="emptyData"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Visibility="Collapsed"
                Content="Xozircha malumotlar yo'q"
                FontSize="18">
            </Label>
            
        </Grid>
    </Grid>
</Page>
