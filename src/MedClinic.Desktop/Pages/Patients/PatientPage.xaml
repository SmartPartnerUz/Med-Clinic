<Page x:Class="MedClinic.Desktop.Pages.Patients.PatientPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MedClinic.Desktop.Components.Loader"
      mc:Ignorable="d" 
      Title="PatientPage"
      Loaded="Page_Loaded">

    <Grid
        Margin="10">

        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid
            HorizontalAlignment="Center"
            Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="500"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Label
                Grid.Column="0"
                Content="Qidirish"
                VerticalAlignment="Center"
                Margin="10"
                FontSize="18"
                Style="{DynamicResource TitleLabel}"/>

            <TextBox
                Margin="0 0 0 0"
                Name="searchTextBox"
                Style="{DynamicResource search}"
                KeyDown="SearchTextBox_KeyDown"
                Grid.Column="1"/>

            <Button
                x:Name="PatientCreate_Button"
                Click="PatientCreate_Button_Click"
                Height="35"
                Width="150"
                Margin="20 0 0 0"
                Grid.Column="2"
                Content="Qo'shish"
                FontSize="18"
                HorizontalAlignment="Center"
                Foreground="{DynamicResource color}"
                Style="{DynamicResource LoginButton}">
            </Button>

        </Grid>

        <Grid
            Grid.Row="1"
            Margin="5 0 15 0">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="70"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="120"/>
            </Grid.ColumnDefinitions>

            <TextBlock
                Text="No"
                Grid.Column="0"
                FontSize="14"
                Margin="10 0 0 0"
                Style="{StaticResource TitleTextBlock}"/>

            <TextBlock
                Text="Ismi"
                FontSize="14"
                Grid.Column="1"
                Style="{StaticResource TitleTextBlock}"/>

            <TextBlock
                Text="Fameliyasi"
                Grid.Column="2"
                FontSize="14"
                Style="{StaticResource TitleTextBlock}"/>

            <TextBlock
                Text="Telefon raqami"
                Grid.Column="3"
                FontSize="14"
                Style="{StaticResource TitleTextBlock}"/>

        </Grid>

        <Grid
            Grid.Row="2">

            <local:Loader
                x:Name="Loader"
                Visibility="Collapsed"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"/>

            <ScrollViewer 
                x:Name="scrolViver">
                <StackPanel 
                    x:Name="st_Patient">
                </StackPanel>
            </ScrollViewer>
            
            <Label 
                x:Name="emptyData"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Visibility="Collapsed"
                Content="Ma'lumot topilmadi"
                FontSize="18"
                Foreground="{StaticResource BorderColor}">
            </Label>
        </Grid>

    </Grid>
</Page>
