<Window x:Class="MedClinic.Desktop.Windows.Doctors.DoctorCreateWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MedClinic.Desktop.Windows.Doctors"
        mc:Ignorable="d"
        Title="DoctorCreateWindow"
        WindowStyle="None"
        WindowState="Maximized"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        AllowsTransparency="True"
        Loaded="Window_Loaded">
    <Border
        Height="600"
        Width="600"
        CornerRadius="10"
        Background="White">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock
                Text="Shifokor qo'shish"
                Style="{StaticResource TextBlockStyle}"/>

            <Button
                Name="Close_Button"
                Grid.Row="0"
                Style="{StaticResource ClosedButton}"
                Click="Close_Button_Click"/>

            <Grid
                Margin="30 10 0 0"
                Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="220"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="90"/>
                </Grid.RowDefinitions>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <Border
                        x:Name="doctor_Image_Border"
                        BorderBrush="{DynamicResource BorderColor}"
                        BorderThickness="1"
                        Grid.Row="0"
                        Width="220"
                        CornerRadius="10"
                        Height="210"
                        MouseDown="doctor_Image_Border_MouseDown"
                        MouseEnter="doctor_Image_Border_MouseEnter"
                        MouseLeave="doctor_Image_Border_MouseLeave">
                        
                        <Border.Background>
                            <ImageBrush 
                                x:Name="doctor_Picture"
                                Stretch="Fill"/>
                        </Border.Background>

                    </Border>

                    <StackPanel
                        Margin="10 10 0 0"
                        Grid.Column="1">

                        <Label
                            FontSize="14"
                            Style="{DynamicResource TitleLabel}"
                            Content="Ismi :"/>
                        
                        <TextBox
                            x:Name="txt_Firstname"
                            Style="{DynamicResource Update_TextBox_Style}"/>

                        <Label
                            Margin="0 5 0 0"
                            FontSize="14"
                            Style="{DynamicResource TitleLabel}"
                            Content="Fameliyasi :"/>
                        
                        <TextBox
                            x:Name="txt_Lastname"
                            Style="{DynamicResource Update_TextBox_Style}"/>

                        <Label
                            Margin="0 5 0 0"
                            FontSize="14"
                            Style="{DynamicResource TitleLabel}"
                            Content="Telefon raqami :"/>
                        
                        <TextBox
                            x:Name="txt_PhoneNuber"
                            PreviewTextInput="txt_PhoneNuber_PreviewTextInput"
                            Style="{DynamicResource Phone_Number_TextBox_Style}"/>

                    </StackPanel>

                </Grid>

                <Grid
                    Margin="0 20 0 0"
                    Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel
                        Margin="30 0 0 0"
                        Grid.Column="0">

                        <Label
                            FontSize="15"
                            Style="{DynamicResource TitleLabel}"
                            Content="Maoshi :"/>
                        
                        <TextBox
                            x:Name="txt_Salary"
                            PreviewTextInput="txt_PhoneNuber_PreviewTextInput"
                            Style="{DynamicResource Update_TextBox_Style}"/>
                        
                        <Label
                            Margin="0 5 0 0"
                            FontSize="15"
                            Style="{DynamicResource TitleLabel}"
                            Content="Xonasi :"/>

                        <ComboBox
                            x:Name="doctor_Room"
                            IsReadOnly="True"
                            Margin="5 5 5 10"
                            Width="200"
                            MaxDropDownHeight="100"
                            HorizontalAlignment="Left">

                            <ComboBox.ItemContainerStyle>
                                <Style TargetType="ComboBoxItem">
                                    <Setter Property="Margin" Value="0 0 15 0"/>
                                </Style>
                            </ComboBox.ItemContainerStyle>

                        </ComboBox>

                        <Label
                            Margin="0 5 0 0"
                            FontSize="15"
                            Style="{DynamicResource TitleLabel}"
                            Content="Xizmat turi :"/>
                        <ComboBox
                            IsReadOnly="True"
                            Name="doctor_Service"
                            Margin="5 5 5 10"
                            Width="200"
                            MaxDropDownHeight="100"
                            HorizontalAlignment="Left">

                            <ComboBox.ItemContainerStyle>
                                <Style TargetType="ComboBoxItem">
                                    <Setter Property="Margin" Value="0,0,15,0"/>
                                </Style>
                            </ComboBox.ItemContainerStyle>

                        </ComboBox>


                    </StackPanel>

                    <StackPanel
                        Grid.Column="1"
                        Margin="10 0 0 0">

                        <Label
                            FontSize="15"
                            Style="{DynamicResource TitleLabel}"
                            Content="Oladigan foizi :"/>
                        
                        <TextBox
                            x:Name="txt_Persentage"
                            MaxLength="3"
                            PreviewTextInput="txt_PhoneNuber_PreviewTextInput"
                            Style="{DynamicResource Update_TextBox_Style}"/>

                        <Label
                            Margin="0 5 0 0"
                            Content="Ro'li :"
                            FontSize="15"
                            Style="{DynamicResource TitleLabel}"/>
                        <ComboBox
                            IsReadOnly="True"
                            Name="doctor_Role"
                            Margin="5 5 5 10"
                            Width="200"
                            HorizontalAlignment="Left">

                            <ComboBoxItem
                                Content="Admin"/>
                            <ComboBoxItem
                                Content="Super admin"/>

                        </ComboBox>

                        <Label
                            Content="Pozitsiyasi :"
                            FontSize="15"
                            Margin="0 5 0 0"
                            Style="{DynamicResource TitleLabel}"/>
                        <ComboBox
                            IsReadOnly="True"
                            Name="doctor_Position"
                            Margin="5 5 5 10"
                            Width="200"
                            MaxDropDownHeight="100"
                            HorizontalAlignment="Left">

                            <ComboBox.ItemContainerStyle>
                                <Style TargetType="ComboBoxItem">
                                    <Setter Property="Margin" Value="0,0,15,0"/>
                                </Style>
                            </ComboBox.ItemContainerStyle>

                        </ComboBox>

                    </StackPanel>

                </Grid>

                <Button
                    Grid.Row="2"
                    x:Name="Create_Button"
                    FontSize="18"
                    Content="Yaratish"
                    Width="200"
                    Style="{StaticResource LoginButton}"
                    Click="Create_Button_Click"/>

            </Grid>

        </Grid>

        <Border.Effect>
            <DropShadowEffect
                BlurRadius="5"
                Opacity="1"
                ShadowDepth="-40"
                Color="Gray">

            </DropShadowEffect>
        </Border.Effect>

    </Border>
</Window>
