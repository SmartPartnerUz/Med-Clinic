<Window x:Class="MedClinic.Desktop.Windows.Login.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MedClinic.Desktop.Windows"
        mc:Ignorable="d"
        Title="LoginWindow" 
        Height="700"
        Width="1100"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        AllowsTransparency="True"
        Background="Transparent">
    <Grid
        Background="#FFFFFF">
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Button 
            x:Name="btnClose"  
            Margin="0 10 20 0"
            Click="btnClose_Click" 
            HorizontalAlignment="Right"
            Style="{DynamicResource ClosedButton}"/>

        <Grid
            Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="420"/>
            </Grid.ColumnDefinitions>
            <Border>
                <Image
                    Source="/Assets/Images/login.png">
                    
                </Image>
            </Border>

            <Grid
                Grid.Column="1" Grid.ColumnSpan="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="200"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Label
                    Grid.Row="0"
                    Margin="0 70 0 0"
                    Content="Smart Clinik"
                    FontSize="50"
                    FontWeight="Bold"
                    Foreground="#329DFF"/>

                <StackPanel 
                    x:Name="stackPanel"
                    Grid.Row="1"
                    Margin="0 0 150 100"
                    Visibility="Visible"
                    Orientation="Vertical">

                    <Label
                        FontSize="20"
                        Content="Telefon raqami"
                        VerticalAlignment="Center"
                        Style="{DynamicResource NameLabel}"/>

                    <Border
                        MouseEnter="Border_MouseEnter"
                        MouseLeave="Border_MouseLeave"
                        CornerRadius="5"
                        Background="#F2F2F2">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="40"/>
                                <RowDefinition Height="0.5"/>
                            </Grid.RowDefinitions>

                            <Grid
                                Grid.Row="0"
                                Margin="5 0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="55"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <Label
                                    x:Name="lbCodePhone"
                                    Grid.Column="0"
                                    Content="+998"
                                    FontSize="18"
                                    Margin="0 5 0 0"
                                    Foreground="Black"
                                    VerticalAlignment="Center"
                                    Style="{DynamicResource NameLabel}"/>

                                <TextBox
                                    x:Name="textboxPhone"
                                    MaxLength="9"
                                    Grid.Column="1"
                                    FontSize="18"
                                    Text="917727005"
                                    BorderThickness="0"
                                    VerticalAlignment="Center"
                                    FontWeight="SemiBold"
                                    Foreground="Black"
                                    Background="Transparent"
                                    PreviewTextInput="textboxPhone_PreviewTextInput"/>

                            </Grid>

                            <Border
                                Grid.Row="1"
                                x:Name="Phoneborder"
                                Margin="5 0"
                                Background="{DynamicResource color}"/>

                        </Grid>
                    </Border>

                    <Label
                        FontSize="20"
                        Content="Parol"
                        Margin="0 20 0 0"
                        VerticalAlignment="Center"
                        Foreground="Black"
                        Style="{DynamicResource NameLabel}"/>

                    <Border
                        MouseEnter="Border_MouseEnter_1"
                        MouseLeave="Border_MouseLeave_1"
                        CornerRadius="5"
                        Background="#F2F2F2">

                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="40"/>
                                <RowDefinition Height="0.5"/>
                            </Grid.RowDefinitions>

                            <Grid
                                Grid.Row="0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="40"/>
                                </Grid.ColumnDefinitions>

                                <PasswordBox
                                    x:Name="textboxParol"
                                    Grid.Column="0"
                                    Margin="10 0"
                                    FontSize="18"
                                    BorderThickness="0"
                                    VerticalAlignment="Center"
                                    FontWeight="SemiBold"
                                    Foreground="Black"
                                    Background="Transparent"/>

                                <TextBox 
                                    x:Name="textboxParolText"
                                    Grid.Column="0"
                                    Visibility="Collapsed"
                                    Margin="10 0"
                                    FontSize="18"
                                    BorderThickness="0"
                                    VerticalAlignment="Center"
                                    FontWeight="SemiBold"
                                    Foreground="Black"
                                    Background="Transparent"/>

                                <Border 
                                    Grid.Column="1">

                                    <Button 
                                        x:Name="showPassword"
                                        Click="showPassword_Click"
                                        Style="{DynamicResource showPasswordButton}"/>

                                </Border>
                            </Grid>

                            <Border
                                Grid.Row="1"
                                Margin="5 0"
                                x:Name="Parolborder"
                                Background="{DynamicResource color}"/>

                        </Grid>
                    </Border>

                    <Label
                        Name="lblForgotPassword"
                        Margin="0 10 140 10"
                        MouseDoubleClick="Label_MouseDoubleClick"
                        MouseEnter="Label_MouseEnter"
                        MouseLeave="Label_MouseLeave"
                        FontSize="14"
                        FontWeight="SemiBold"
                        VerticalAlignment="Center"
                        Content="Parolni unutdingizmi ?"/>

                    <Button
                        x:Name="LoginBtn"
                        Margin="0 50 0 0"
                        Height="35"
                        Width="265"
                        FontSize="18"
                        Content="Kabinetga kirish"
                        Click="LoginBtn_Click"
                        Style="{DynamicResource LoginButton}"/>

                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
</Window>
