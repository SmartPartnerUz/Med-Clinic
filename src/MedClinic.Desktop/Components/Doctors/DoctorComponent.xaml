<UserControl x:Class="MedClinic.Desktop.Components.Doctors.DoctorComponent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MedClinic.Desktop.Components.Doctors"
             mc:Ignorable="d" 
             Height="350" 
             Width="280">
    <Grid
        Margin="10">
        <Border
            x:Name="DoctorImage"
            Cursor="Hand"
            MouseDown="DoctorImage_MouseDown"
            MouseEnter="DoctorImage_MouseEnter"
            MouseLeave="DoctorImage_MouseLeave"
            BorderBrush="Transparent"
            BorderThickness="1"
            CornerRadius="10"
            Background="{DynamicResource FirstColor}">
            <StackPanel
                Margin="5 0 5 5"
                Orientation="Vertical">
                
                <Border
                    Margin="0 10"
                    Height="180"
                    Width="230"
                    CornerRadius="10"
                    Background="#E8E8E8">
                    
                        <Image
                            Source="/Assets/Images/login.png" 
                            x:Name="DoctorsImage"
                            Stretch="UniformToFill"/>

                </Border>
                
                <Label
                    x:Name="DoctorName"
                    Margin="10 0 10 0"
                    Content="Shodiyor Erqo'ziyev"
                    Style="{DynamicResource NameLabel}"/>
                
                <Label
                    x:Name="DoctorPersonality"
                    Margin="10 0 0 0"
                    Content="Stamatolog"
                    Style="{DynamicResource TitleLabel}"/>

                <Grid
                    Margin="0 15 0 0">

                    <Button
                        x:Name="updatebtn"
                        Background="White"
                        Height="30"
                        Width="30"
                        Click="updatebtn_Click"
                        HorizontalAlignment="Left"
                        Style="{DynamicResource EditeButton}"/>
                    
                    <Button
                        x:Name="deletebtn"
                        Background="White"
                        Height="30"
                        Width="30"
                        Click="deletebtn_Click"
                        HorizontalAlignment="Right"
                        Style="{DynamicResource DeleteButton}"/>

                </Grid>
                
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
